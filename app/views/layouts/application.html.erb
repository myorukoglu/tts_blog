<!DOCTYPE html>
<html>
  <head>
    <title>TtsBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
 
  </head>

  <body style="padding: 20px;">
  <ul class="nav nav-pills nav-fill">
    <li class="nav-item">
       <%= link_to "Home", home_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="<%= posts_path() %>">Posts</a>
    </li>
    <li class="nav-item">

    <% if user_signed_in? %>
      <%= link_to "Sign Out, #{current_user.email}", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path(), class: "btn btn-success" %>
    <% end %>
       
    </li>
    
    
  </ul>
    <%= yield %>
  </body>
</html>
